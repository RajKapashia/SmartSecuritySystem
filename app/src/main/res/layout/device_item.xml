<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView android:layout_marginBottom="20dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    app:cardPreventCornerOverlap="false"
    app:cardBackgroundColor="#F1F3F5"
    android:minHeight="180dp"
    android:layout_alignParentTop="true"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:layout_margin="5dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="5dp"
    android:background="#8F8E8E"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/blutooth" />
        <TextView
            android:id="@+id/text_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="20dp"
            android:textSize="22sp"

            android:text="Unknown device"/>
        <TextView
            android:id="@+id/text_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="60dp"
            android:layout_marginTop="45dp"
            android:textSize="15sp"

            android:text="00:00:00:00:00:00"
            android:paddingTop="5dp"/>
        <TextView
            android:id="@+id/text_signal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="N/A"

            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="13dp"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/text_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="N/A"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="85dp"
            android:textStyle="bold"
            android:textSize="15sp"
            />


        <TextView
            android:id="@+id/text_paired"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>



    </RelativeLayout>

</androidx.cardview.widget.CardView>

